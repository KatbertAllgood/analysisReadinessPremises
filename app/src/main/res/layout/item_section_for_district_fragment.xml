<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="12dp"
    app:cardElevation="12dp"
    android:layout_width="170dp"
    android:layout_height="170dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/samolet_blue">

        <TextView
            android:id="@+id/item_section_tv_number"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:layout_marginStart="4dp"

            android:layout_marginTop="6dp"

            android:background="@drawable/shape_oval_black_seventy"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="parent"
            tools:text="4" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/roboto_regular"
            android:lineSpacingExtra="-0.5dp"
            android:text="@string/section_for_item"

            android:textColor="@color/white"
            android:textSize="18sp"
            
            android:layout_marginTop="2dp"

            app:layout_constraintEnd_toEndOf="@id/item_section_tv_number"
            app:layout_constraintStart_toStartOf="@id/item_section_tv_number"
            app:layout_constraintTop_toBottomOf="@id/item_section_tv_number" />

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/item_section_pb_progress"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginBottom="12dp"
            android:layout_marginEnd="4dp"

            android:progress="75"
            app:indicatorColor="@color/samolet_blue_light"
            app:indicatorSize="120dp"

            app:trackColor="@color/background_filter"
            app:trackCornerRadius="10dp"
            app:trackThickness="12dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/item_section_tv_progress"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="@color/white"
            tools:text="74%"
            android:fontFamily="@font/roboto_medium"
            android:textSize="24sp"

            app:layout_constraintTop_toTopOf="@id/item_section_pb_progress"
            app:layout_constraintStart_toStartOf="@id/item_section_pb_progress"
            app:layout_constraintEnd_toEndOf="@id/item_section_pb_progress"
            app:layout_constraintBottom_toBottomOf="@id/item_section_pb_progress" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>